<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- novos metas -->
    <!-- theme-check-disable -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ 'index.css' | asset_url }}">
    <!-- theme-check-enable -->
    <title>
      {{ shop.name }}
      - Móveis sofisticados
    </title>
  </head>
  <body>
    <header class="row w-100a" id="topo">
      <div class="col-lg-2 col-md-2 col-3 mt-lg-3">
        <!-- coluna link home -->
        <br>
        <a href="{{ '/' | relative_url }}" id="nomeLJ">{{ shop.name | upcase }}</a>
      </div>
      <!-- fim coluna link home -->
      <div class="col-lg-8 col-md-8 col-6 mt-lg-4">
        <!-- coluna navegação / menu -->
        <nav>
          <ul class="nav justify-content-center">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle Menu" href="#" role="button">Coleções</a>
              <ul class="dropdown-menu">
                {% for collection in collections %}
                  <li>
                    <a class="dropdown-item Menu" href="{{ collection.url | relative_url }}">
                      {{ collection.title }}
                    </a>
                  </li>
                {% endfor %}
              </ul>
            </li>
            <li class="nav-item">
              <a class="nav-link Menu" href="{{ 'sobrenos' | page_url }}">Sobre nós</a>
            </li>
            <li class="nav-item">
              <a class="nav-link Menu" href="{{ 'politicas' | page_url }}">Políticas</a>
            </li>
            <li class="nav-item">
              <a class="nav-link Menu" href="#Atendimento">Atendimento</a>
            </li>
          </ul>
        </nav>
      </div>
      <!-- fim coluna navegação / menu -->
      <!-- coluna navegação loja mobile: pesquisa, login e carrinho -->
      <div class="col-3 col-md-2">
        <nav class="navbar navbar-expand-lg">
          <!-- botão para abrir o modal -->
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="modal"
            data-bs-target="#menuModal"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <!-- Modal -->
          <div class="modal fade" id="menuModal" tabindex="-1" aria-labelledby="menuModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-body" id="menuMobile">
                  <div class="row mb-3">
                    <button type="button" class="btn-close mx-auto" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <!-- Segunda linha: links com ícones -->
                  <div class="row">
                    <div class="col-4">
                      <a href="/search" class="d-flex flex-column align-items-center text-decoration-none">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="32"
                          height="32"
                          fill="currentColor"
                          class="bi bi-search icon"
                          viewBox="0 0 16 16"
                        >
                          <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                        </svg>
                        <span>Pesquisa</span>
                      </a>
                    </div>
                    <div class="col-4">
                      <a href="/account" class="d-flex flex-column align-items-center text-decoration-none">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="32"
                          height="32"
                          fill="currentColor"
                          class="bi bi-person icon"
                          viewBox="0 0 16 16"
                        >
                          <path d="M12 1a1 1 0 0 1 1 1v10.755S12 11 8 11s-5 1.755-5 1.755V2a1 1 0 0 1 1-1zM4 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                          <path d="M8 10a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
                        </svg>
                        <span>Login</span>
                      </a>
                    </div>
                    <div class="col-4">
                      <a href="/cart" class="d-flex flex-column align-items-center text-decoration-none">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="32"
                          height="32"
                          fill="currentColor"
                          class="bi bi-cart icon"
                          viewBox="0 0 16 16"
                        >
                          <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l1.25 5h8.22l1.25-5zM5 13a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0"/>
                        </svg>
                        <span>Carrinho</span>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </nav>
      </div>
    </header>
