<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ 'index.css' | asset_url }}">

    <!-- novos metas -->
    <!-- theme-check-disable -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ 'index.css' | asset_url }}">
    <!-- theme-check-enable -->
    <title>
      {{ shop.name }}
      - Móveis sofisticados
    </title>
  </head>
  <body>
    <main>
      <div class="col-12 " id="Promocoes">
        <!-- merchandise de promoção -->
        <h1>PROMOÇÃO DO MÊS</h1>
      </div>
      <!-- fim merchandise de promoção -->

      <div class="position-relative" id="Produtos">
        <!-- imagem interativa -->
        <!-- imagem principal -->
        <img src="{{'principal.jpg' | asset_url}}" class="img-fluid w-100">
        <!-- link de interação 1 -->
        <a
          href="#"
          class="position-absolute translate-middle badge bg-primary text-white text-decoration-none"
          id="P1"
        >
          <div id="detalheP1">
            <img src="{{potrona.webp | asset_url}}">
            <p>NOME</p>
            <p>R$ 100,00</p>
          </div>
        </a>

        <a
          href="#"
          class="position-absolute translate-middle badge bg-primary text-white text-decoration-none"
          id="P2"
        >
          <div id="detalheP2"></div>
        </a>
      </div>
      <!-- fim imagem interativa -->

      <div class="col-md-12 col-sm-8" id="Categorias">
        <h2>COLEÇÕES</h2>
        <div class="row w-100">
          {% for collection in collections %}
            <!-- 1. Para cada coleção -->
            <div class="card col-lg-2 col-md-4 col-sm-6 mb-3">
              <h5>{{ collection.title }}</h5>
              <!-- Título único da coleção -->
              <div id="carrossel-{{ collection.handle }}" class="carousel slide">
                <div class="carousel-inner">
                  {% for product in collection.products %}
                    <!-- 2. Produtos da coleção atual -->
                    <div class="carousel-item {% if forloop.first %}active{% endif %}">
                      <a href="{{ product.url }}">
                        <img
                          src="{{ product.featured_image | img_url: 'medium' }}"
                          class="card-img-bottom img-fluid w-100"
                          alt="{{ product.title }}"
                        >
                      </a>
                      <div class="product-details">
                        <p>{{ product.title }}</p>
                        <p>{{ product.price | money }}</p>
                      </div>
                    </div>
                  {% endfor %}
                </div>
                <!-- Controles do carrossel -->
                <button
                  class="carousel-control-prev"
                  data-bs-target="#carrossel-{{ collection.handle }}"
                  data-bs-slide="prev"
                >
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </button>
                <button
                  class="carousel-control-next"
                  data-bs-target="#carrossel-{{ collection.handle }}"
                  data-bs-slide="next"
                >
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </button>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>

      <!-- fim categorias produtos -->

      <!-- botão topo página -->
      <div id="btntopo">
        <a href="#topo">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            fill="currentColor"
            class="bi bi-arrow-up-circle-fill"
            viewBox="0 0 16 16"
          >
            <path d="M16 8A8 8 0 1 0 0 8a8 8 0 0 0 16 0m-7.5 3.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708l3-3a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707z"/>
          </svg>
        </a>
      </div>
      <!-- fim botão topo página -->

      <div id="Atendimento" class=" col-10 offset-1 mb-4 mt-4">
        <!-- Atendimento -->
        <br>
        <h2>ATENDIMENTO</h2>
        <br>
        <p>Precisa de ajuda? Tem dúvidas?</p>
        <br>
        <a href="mailto:gusta.gustavo.m@gmail.com">Fale Cosnosco!</a>
        <br>
        <br>
      </div>
      <!-- Fim Atendimento -->
    </main>
  </body>
</html>
