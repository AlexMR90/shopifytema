{% comment %} menu-custom.liquid {% endcomment %}
{% schema %}
{
  "name": "Custom Menu",
  "settings": [
    {
      "type": "color",
      "id": "menu_link_color",
      "label": "Cor dos Links do Menu",
      "default": "#000000"
    }
  ]
}
{% endschema %}

<nav class="custom-menu">
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/products">Produtos</a></li>
    <li><a href="/about">Sobre</a></li>
    <li><a href="/contact">Contato</a></li>
  </ul>
</nav>

<style>
  .custom-menu {
    text-align: center;
    background-color: #f8f8f8;
    padding: 10px 0;
  }

  .custom-menu ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    gap: 20px;
  }

  .custom-menu a {
    text-decoration: none;
    color: {{ settings.menu_link_color }};
    font-weight: bold;
    transition: color 0.3s;
  }

  .custom-menu a:hover {
    color: #ff6600;
  }
</style>
