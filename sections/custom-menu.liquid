<style>
  .custom-menu {
    text-align: center;
    padding: 10px 0;
  }

  .custom-menu ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    gap: 20px;
  }

  .custom-menu a {
    text-decoration: none;
    color: {{ settings.menu_link_color }} ;
    font-weight: bold;
    transition: color 0.4s;
  }

  .custom-menu ul li {
    position: relative;
    transition: color 0.3s ease; /* Transição de cor do texto */
}

.custom-menu ul li a:hover {
    color: #2c3e50; /* Cor do texto ao passar o mouse */
}

.custom-menu ul li::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -5px;
    width: 0;
    height: 2px;
    background-color: #2c3e50;
    transition: width 0.3s ease;
}

.custom-menu ul li:hover::after {
    width: 100%;
}

</style>

